datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

//このテーブルは後からでも良いのでいったん考えなくていい。
model User {
  id        String        @id @default(uuid())
  githubId  String        @unique
  name      String?
  avatarUrl String?

  dailyReports DailyReport[]
}

//まずこのデイリーレポートテーブルを理解しましょう
model DailyReport {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())

  // 1. 作業記録
  workDurationSec Int?          // 作業時間（秒）
  githubUrl       String       // PR / コミットのURL
  dailyNote       String       //日報の内容

  // 2. GitHub連携（数値だけ持つ）
  diffCount     String         // diffの内容

  // 3. AI評価（決まった項目に分けて保存）
  aiScore      Int         // 0-100 など
  aiGoodPoints String         // 良かった点
  aiBadPoints  String         // 改善点・課題
  aiStudyTime  String?         // 学習時間コメントなど
}